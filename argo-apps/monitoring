apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: argo-apps-monitor
  namespace: argocd
spec:
  destination:
    namespace: monitoring
    server: https://kubernetes.default.svc
  project: default
  source:
    path: monitoring
    repoURL: https://github.com/t1wg/argocd.git
    targetRevision: HEAD
  syncPolicy:
    automated:
      prune: true
    syncOptions:
      - CreateNamespace=true
